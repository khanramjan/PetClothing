# Database Connection
ConnectionStrings__DefaultConnection=Host=your_host;Port=your_port;Database=your_database;Username=your_username;Password=your_password;SSL Mode=Prefer;Trust Server Certificate=true

# Environment
ASPNETCORE_ENVIRONMENT=Production

# JWT Configuration
Jwt__Secret=YourSuperSecretKeyThatIsAtLeast32CharactersLongForHS256Algorithm
Jwt__Issuer=PetClothingShop
Jwt__Audience=PetClothingShopClient
Jwt__AccessTokenExpiryMinutes=60
Jwt__RefreshTokenExpiryDays=7

# SSLCommerz Configuration
SSLCommerz__StoreId=your_store_id
SSLCommerz__StorePassword=your_store_password
SSLCommerz__ApiUrl=https://sandbox.sslcommerz.com/gwprocess/v4/api.php
SSLCommerz__ValidationUrl=https://sandbox.sslcommerz.com/validator/api/validationserverAPI.php
SSLCommerz__IsProduction=false

# URLs
Backend__BaseUrl=http://localhost:5000
Frontend__Url=http://localhost:5173
