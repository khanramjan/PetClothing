# Database Connection
DATABASE_HOST=your_host
DATABASE_PORT=your_port
DATABASE_NAME=your_database
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# Connection String (Alternative format)
ConnectionStrings__DefaultConnection=Host=your_host;Port=your_port;Database=your_database;Username=your_username;Password=your_password;SSL Mode=Prefer;Trust Server Certificate=true

# Supabase / DATABASE_URL example (Supabase provides a DATABASE_URL in the form below).
# If you prefer the URL form, set DATABASE_URL and the app will convert it automatically.
# Example:
# DATABASE_URL=postgresql://postgres:your_password@db.xxxxxx.supabase.co:5432/postgres
# Notes:
# - Supabase uses SSL by default. The app will request SSL (SslMode=Require) and trust the server certificate.
# - You can continue to set ConnectionStrings__DefaultConnection directly (Npgsql format) instead of DATABASE_URL.

# Environment
ASPNETCORE_ENVIRONMENT=Development

# JWT Configuration
JWT_SECRET=YourSuperSecretKeyThatIsAtLeast32CharactersLongForHS256Algorithm
JWT_ISSUER=PetClothingShop
JWT_AUDIENCE=PetClothingShopClient

# SSLCommerz Configuration
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_API_URL=https://sandbox.sslcommerz.com/gwprocess/v4/api.php
SSLCOMMERZ_VALIDATION_URL=https://sandbox.sslcommerz.com/validator/api/validationserverAPI.php

# URLs
BACKEND_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173
