# üîê Production Environment Variables Template
# Set these in your deployment platform (Render, Railway, Vercel, Azure, etc.)
# ‚ö†Ô∏è NEVER store these in source code!

# ==========================================
# DATABASE (Supabase)
# ==========================================

# For production, use your Supabase database credentials
ConnectionStrings__DefaultConnection=Host=db.YOUR_PROJECT.supabase.co;Port=5432;Database=postgres;Username=postgres;Password=YOUR_PRODUCTION_PASSWORD;SSL Mode=Require;Trust Server Certificate=true;AddressFamily=InterNetwork

# ==========================================
# BACKEND
# ==========================================

ASPNETCORE_ENVIRONMENT=Production
Backend__BaseUrl=https://your-backend-domain.com
Frontend__Url=https://your-frontend-domain.com

# ==========================================
# JWT CONFIGURATION
# ==========================================
# ‚ö†Ô∏è IMPORTANT: Generate a new strong secret key for production!

JWT_SECRET=GENERATE_NEW_STRONG_SECRET_AT_LEAST_64_CHARACTERS_LONG_AND_RANDOM
JWT_ISSUER=PetClothingShop
JWT_AUDIENCE=PetClothingShopClient
JWT_AccessTokenExpiryMinutes=60
JWT_RefreshTokenExpiryDays=7

# ==========================================
# SUPABASE API (Frontend)
# ==========================================

SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# ==========================================
# SSLCOMMERZ (Payment Gateway - Production)
# ==========================================
# Contact SSLCommerz to get production credentials

SSLCOMMERZ_STORE_ID=your_production_store_id
SSLCOMMERZ_STORE_PASSWORD=your_production_store_password
SSLCOMMERZ_API_URL=https://securepay.sslcommerz.com/gwprocess/v4/api.php
SSLCOMMERZ_VALIDATION_URL=https://securepay.sslcommerz.com/validator/api/validationserverAPI.php
SSLCOMMERZ_IsProduction=true

# ==========================================
# FILE UPLOAD
# ==========================================
# For production, consider using cloud storage (AWS S3, Azure Blob, etc.)

FileUpload__Path=wwwroot/uploads
FileUpload__MaxSizeInMB=10
FileUpload__AllowedExtensions=.jpg,.jpeg,.png,.gif,.webp

# ==========================================
# STRIPE (Optional - if integrated)
# ==========================================

# Stripe__PublishableKey=pk_live_YOUR_LIVE_KEY
# Stripe__SecretKey=sk_live_YOUR_LIVE_SECRET_KEY
# Stripe__WebhookSecret=whsec_YOUR_WEBHOOK_SECRET

# ==========================================
# LOGGING
# ==========================================

Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# ==========================================
# RATE LIMITING
# ==========================================

IpRateLimiting__EnableEndpointRateLimiting=true
IpRateLimiting__StackBlockedRequests=false

# ==========================================
# CORS (For frontend domain)
# ==========================================
# Make sure this matches your production frontend URL

AllowedOrigins=https://your-frontend-domain.com

# ==========================================
# FRONTEND VARIABLES (for Vite)
# ==========================================
# Set these in your frontend deployment platform (Vercel, Netlify, etc.)

VITE_API_URL=https://your-backend-domain.com/api
VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
